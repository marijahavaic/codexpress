{% extends 'base.html.twig' %}

{% block title %}
    {{snippet.user.username}} - {{snippet.id }}
{% endblock %}

{% block body %}
<article class="article">
  <h1 class="article-title">{{snippet.title}}</h1>
  <p class="article-meta">Creer le: {{ snippet.createdAt|date("d/m/Y")}}</p>
  <br>
  {% if snippet.editedAt %}
    - Modife le: {{ item.modifiedAt|date("d/m/Y")}}    
  {% endif %}
  <pre class="text-lead">
   <code>{{snippet.content|raw}}</code> 
  </pre>
  <p>Redige par {{snippet.user.username}} </p>
  <p>Statut: {% if snippet.isPublic == true %}
    <span class="green-pill">Public</span> 
    {% else %}
    <span class="yellow-pill">Prive</span>
  {% endif %}
  </p>

  <div class="row">
    <button>Read More</button>
    <button>5 Comments</button>
  </div>
</article>
{% endblock %}
